import shared.DataSet;
import shared.Instance;

import java.util.Iterator;
import java.util.ArrayList;
import java.util.Random;

/**
 * A filter that supports k-fold cross validation of a dataset
 * @author Daniel Cohen dcohen@gatech.edu
 * @version 1.0
 */

public class CrossValidator {
    private int foldCount;
    private DataSet data;
    private ArrayList<DataSet> folds;

    public CrossValidator(DataSet data, int foldCount) {
        this.data = data;
        this.foldCount = foldCount;
        this.folds = new ArrayList<>();

        generateFolds();
    }

    private void generateFolds() {
        int foldSize = this.data.size() / foldCount;
        Random rand = new Random();

        for (int currentFold = 0; currentFold < foldCount; currentFold++) {
            DataSet currentSet = new DataSet(new Instance[foldSize], this.data.getDescription());
            int i = 0;
            while (i < foldSize) {
                int position = rand.nextInt(this.data.size());
                Instance instance = this.data.get(position);
                if (instance != null && instance.getData() != null) {
                    currentSet.set(i, instance);
                    this.data.set(position, null);
                    i++;
                }
            }
            this.folds.add(currentSet);
        }
    }

    public ArrayList<DataSet> getValidationFolds(DataSet currentFold) {
        ArrayList<DataSet> result = new ArrayList<>(this.folds);
        result.remove(currentFold);
        return result;
    }

    public ArrayList<DataSet> getFolds() {
        return this.folds;
    }

    public int getFoldCount() {
        return this.foldCount;
    }
}
    
